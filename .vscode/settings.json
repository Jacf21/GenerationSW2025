{
  // ğŸ”§ Formatear solo con ESLint al guardar
  "editor.formatOnSave": false,

  // ğŸ§© Habilitar ESLint y validar mÃºltiples lenguajes
  "eslint.alwaysShowStatus": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "json",
    "jsonc"
  ],

  // ğŸš€ Ejecutar auto-fix y Prettier (a travÃ©s de ESLint) al guardar
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "always"
  },

  // ğŸ’… Evitar que Prettier actÃºe directo (solo a travÃ©s de ESLint)
  "prettier.enable": false,

  // ğŸ“ Ignorar carpetas innecesarias
  "files.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/build": true,
    "**/coverage": true
  },

  // ğŸ’» ConfiguraciÃ³n coherente para todos los tipos de archivo
  "[javascript]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[typescript]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[json]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  }
}
